<html lang="en">

<head>
    <title>realtime multiroom chat</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="/images/android-chrome-192x192.png" e="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
        integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/chat.css" />
</head>

<body>
    <div class="main_cntn">
        <div class="additional">
            <ul>
                <li><span id="userroll">{{user.roll}}</span> <span id="username">{{user.fname}}</span></li>
                <li>
                    <button style="background-color: transparent;border:none;margin-bottom:.5rem;">rooms</button>
                    <div class="chatrooms">
                        {{#if data}}
                        {{#each data}}
                        <input type="radio" name="rooms" value=" {{this.room_id}} {{this.host_roll}} ">
                        <label for="rooms">{{this.room_id}}_{{this.host_roll}}</label>
                        {{/each}}
                        {{/if}}
                    </div>
                </li>
            </ul>
        </div>
        <div class="main_area">
            <div class="header">
                <!--room id with host roll-->
            </div>
            <div class="message_area">
                <!--We will add div dynamically and add here-->
            </div>
            <div class="footer">
                <form id="message_form">
                    <input id="msg" type="text" placeholder="Enter Message" required autocomplete="off" />
                    <button class="btn" type="submit" form="message_form"><i class="fas fa-paper-plane"></i>
                        Send
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="backtohome">
        <form action="/" method="POST">
            <button><img src="/images/icons8-home-page-50.png" alt="home Image" title="back to home"></button>
        </form>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js script/chat.js"></script>
</body>

</html>